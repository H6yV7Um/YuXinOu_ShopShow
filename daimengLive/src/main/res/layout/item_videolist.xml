<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="0dp"
    android:layout_height="@dimen/y234"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:cardCornerRadius="@dimen/x8"
    android:elevation="10dp"
    android:background="#ffffff"
    android:layout_marginLeft="@dimen/x20"
    android:layout_marginRight="@dimen/x20"
    android:layout_marginTop="@dimen/y20"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/live_icon"
            android:layout_width="@dimen/x234"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/live_name"
                android:textColor="@color/text_color"
                android:text="重庆吃货馆"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginLeft="@dimen/x20"
                />
            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:src="@drawable/watchnum"
                android:scaleType="fitXY"
                android:layout_toLeftOf="@+id/watch"
                android:layout_alignBottom="@+id/watch"
                android:layout_marginBottom="3dp"
                />
            <TextView
                android:id="@+id/watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/share"
                android:layout_alignBottom="@+id/share"
                android:layout_toStartOf="@+id/share_img"
                android:text="1120"
                android:layout_toLeftOf="@+id/share_img"
                android:textSize="14sp"
                android:layout_marginRight="@dimen/x20"
                />
            <ImageView
                android:id="@+id/share_img"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:src="@drawable/sharenum"
                android:scaleType="fitXY"
                android:layout_toLeftOf="@+id/share"
                android:layout_alignBottom="@+id/share"
                android:layout_marginBottom="3dp"
                />

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/video_pl"
                android:layout_alignBottom="@+id/video_pl"
                android:layout_toStartOf="@+id/pl_img"
                android:text="1120"
                android:layout_marginRight="@dimen/x20"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/video_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginBottom="@dimen/y20"
                android:text="110次"
                />
            <ImageView
                android:id="@+id/img_good"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:src="@drawable/good"
                android:scaleType="fitXY"
                android:layout_toLeftOf="@+id/video_good"
                android:layout_alignBottom="@+id/video_good"
                android:layout_marginBottom="3dp"
                />
            <TextView
                android:id="@+id/video_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/img_good"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginBottom="@dimen/y20"
                android:text="110次"
                />
            <ImageView
                android:id="@+id/pl_img"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:src="@drawable/pingl"
                android:scaleType="fitXY"
                android:layout_toLeftOf="@+id/video_pl"
                android:layout_alignBottom="@+id/video_pl"
                android:layout_marginBottom="3dp"
                />
            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美女主播"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_below="@+id/live_name"
                android:layout_alignStart="@+id/live_name"
                android:layout_marginTop="@dimen/y18"
                android:textSize="16sp"
                />

        </RelativeLayout>
        
    </LinearLayout>
</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>