<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/login_bg"
    android:layout_height="match_parent">
    <include layout="@layout/view_title_layout" android:id="@+id/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/messages"
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_height="@dimen/y120">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x31"
                android:textColor="#333333"
                android:textSize="@dimen/x32"
                android:text="@string/truename"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x31"
                android:background="@drawable/shape_botton_bg"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:hint="@string/puttruename"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:singleLine="true"
                    android:background="@null"
                    android:textSize="@dimen/x28"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_height="@dimen/y120">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x31"
                android:textColor="#333333"
                android:textSize="@dimen/x32"
                android:text="@string/phone_number"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x31"
                android:background="@drawable/shape_botton_bg"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:hint="@string/put_phonenumber"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:singleLine="true"
                    android:background="@null"
                    android:textSize="@dimen/x28"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_height="@dimen/y120">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x31"
                android:textColor="#333333"
                android:textSize="@dimen/x32"
                android:text="@string/bank_number"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x31"
                android:background="@drawable/shape_botton_bg"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/carnumber"
                    android:layout_width="match_parent"
                    android:hint="@string/put_banke_number"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:singleLine="true"
                    android:background="@null"
                    android:textSize="@dimen/x28"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_height="@dimen/y120">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x31"
                android:textColor="#333333"
                android:textSize="@dimen/x32"
                android:text="@string/open_bank"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x31"
                android:background="@drawable/shape_botton_bg"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/bank"
                    android:layout_width="@dimen/x16"
                    android:src="@mipmap/xiayibu"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x31"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/banktylp"
                    android:layout_width="match_parent"
                    android:hint="@string/put_open_bank"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:layout_toLeftOf="@+id/bank"
                    android:layout_marginRight="@dimen/x5"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="@dimen/x28"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_height="@dimen/y120">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x31"
                android:textColor="#333333"
                android:textSize="@dimen/x32"
                android:text="@string/open_bank_address"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x31"
                android:background="@drawable/shape_botton_bg"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/bank_address"
                    android:layout_width="@dimen/x16"
                    android:src="@mipmap/xiayibu"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x31"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/bankAddress"
                    android:layout_width="match_parent"
                    android:hint="@string/put_bank_adress"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:layout_toLeftOf="@+id/bank_address"
                    android:layout_marginRight="@dimen/x5"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="@dimen/x28"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_height="@dimen/y120">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x31"
                android:textColor="#333333"
                android:textSize="@dimen/x32"
                android:text="@string/bank_name"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x31"
                android:background="@drawable/shape_botton_bg"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/bankName"
                    android:layout_width="match_parent"
                    android:hint="@string/put_bank_name"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="@dimen/x28"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x40"
        android:layout_below="@+id/messages"
        android:layout_marginRight="@dimen/x40"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/y120"
        android:gravity="center"
        android:textSize="@dimen/x36"
        android:text="@string/next"
        android:background="@drawable/button"
        android:layout_height="@dimen/y98" />
</LinearLayout>