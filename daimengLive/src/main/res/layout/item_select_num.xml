<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/btn_diamonds_select_num"
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="70dp"
            >
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.liren.live.widget.BlackTextView
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/colorGray5"
                    android:id="@+id/tv_diamondsnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.liren.live.widget.BlackTextView
                    android:id="@+id/bt_price_text"
                    android:textColor="@color/colorGray4"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <com.liren.live.widget.BlackTextView
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/black"
                android:id="@+id/tv_price_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

</RelativeLayout>