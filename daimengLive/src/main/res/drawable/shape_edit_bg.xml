<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- rectangle表示为矩形 -->

    <!-- 填充的颜色 -->
    <solid android:color="#F7F7F7" />

    <!-- 边框的颜色和粗细 -->
    <stroke
        android:width="1dp"
        android:color="#999999"
        />

    <!-- android:radius 圆角的半径 -->
    <corners
        android:radius="8px"
        />

</shape>
